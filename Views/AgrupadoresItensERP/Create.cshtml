@model Gerenciador_de_Produtos.Models.AgrupadorItemERP

@{
    ViewData["Title"] = "Novo Vínculo de Agrupador";
}

<h2 class="mb-4">@ViewData["Title"]</h2>

<div class="card shadow-sm border-0">
    <div class="card-body">
        <form asp-action="Create">

            <!-- ALERTA DE ERROS DE VALIDAÇÃO -->
            @if (!ViewData.ModelState.IsValid)
            {
            <div asp-validation-summary="All" class="alert alert-danger">
                <strong>Erro:</strong> Por favor, corrija os campos destacados abaixo antes de continuar.
            </div>
            }

            <div asp-validation-summary="All" class="alert alert-danger d-none"></div>

            <!-- Agrupador -->
            <div class="mb-3">
                <label asp-for="AgrupadorId" class="form-label">Agrupador</label>
                <select asp-for="AgrupadorId" class="form-select" asp-items="ViewBag.AgrupadorId">
                    <option value="">-- selecione --</option>
                </select>
                <span asp-validation-for="AgrupadorId" class="text-danger"></span>
            </div>

            <!-- Item ERP -->
            <div class="mb-3">
                <label asp-for="ItemERPId" class="form-label">Item ERP</label>
                <select asp-for="ItemERPId" class="form-select" asp-items="ViewBag.ItemERPId">
                    <option value="">-- selecione --</option>
                </select>
                <span asp-validation-for="ItemERPId" class="text-danger"></span>
            </div>

            <!-- Dimensões -->
            <div class="row g-3">
                <div class="col-md-6">
                    <label asp-for="Comprimento" class="form-label"></label>
                    <input asp-for="Comprimento" class="form-control" />
                    <span asp-validation-for="Comprimento" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Altura" class="form-label"></label>
                    <input asp-for="Altura" class="form-control" />
                    <span asp-validation-for="Altura" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Profundidade" class="form-label"></label>
                    <input asp-for="Profundidade" class="form-control" />
                    <span asp-validation-for="Profundidade" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Quantidade" class="form-label"></label>
                    <input asp-for="Quantidade" class="form-control" />
                    <span asp-validation-for="Quantidade" class="text-danger"></span>
                </div>
            </div>

            <!-- Status -->
            <div class="mb-3 mt-3">
                <label asp-for="Status" class="form-label">Status</label>
                <select asp-for="Status" class="form-select">
                    <option value="">-- selecione --</option>
                    <option value="Ativo">Ativo</option>
                    <option value="Inativo">Inativo</option>
                    <option value="Obsoleto">Obsoleto</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            <!-- Ações -->
            <div class="mt-4">
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-plus-circle me-1"></i>Criar
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary ms-2">
                    <i class="bi bi-arrow-left-circle me-1"></i>Voltar
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
