@model Gerenciador_de_Produtos.Models.ComponenteItemERP

@{
    ViewData["Title"] = "Vincular Item ERP ao Componente";
}

<h1 class="mb-4">@ViewData["Title"]</h1>

@if (ViewBag.DebugErrors != null)
{
    <div class="alert alert-danger">
        <strong>DEBUG:</strong> @ViewBag.DebugErrors
    </div>
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="ComponenteId" class="form-label">Componente</label>
                <select asp-for="ComponenteId"
                        class="form-select"
                        asp-items="@(ViewData["ComponenteId"] as SelectList)">
                    <option value="">-- selecione o componente --</option>
                </select>
                <span asp-validation-for="ComponenteId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ItemERPId" class="form-label">Item ERP</label>
                <select asp-for="ItemERPId"
                        class="form-select"
                        asp-items="@(ViewData["ItemERPId"] as SelectList)">
                    <option value="">-- selecione o Item ERP --</option>
                </select>
                <span asp-validation-for="ItemERPId" class="text-danger"></span>
            </div>

            <div class="row g-3 mb-3">
                <div class="col-md-6">
                    <label asp-for="Comprimento" class="form-label">Comprimento</label>
                    <input asp-for="Comprimento" class="form-control" />
                    <span asp-validation-for="Comprimento" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="Profundidade" class="form-label">Profundidade</label>
                    <input asp-for="Profundidade" class="form-control" />
                    <span asp-validation-for="Profundidade" class="text-danger"></span>
                </div>
            </div>

            <div class="row g-3 mb-3">
                <div class="col-md-6">
                    <label asp-for="Altura" class="form-label">Altura</label>
                    <input asp-for="Altura" class="form-control" />
                    <span asp-validation-for="Altura" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="Quantidade" class="form-label">Quantidade</label>
                    <input asp-for="Quantidade" class="form-control" />
                    <span asp-validation-for="Quantidade" class="text-danger"></span>
                </div>
            </div>

            <div class="form-check mb-4">
                <input asp-for="Status" class="form-check-input" />
                <label asp-for="Status" class="form-check-label">Ativo?</label>
            </div>

            <div class="d-flex">
                <button type="submit" class="btn btn-primary me-2">Salvar</button>
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <!-- jQuery Validation -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.12/dist/jquery.validate.unobtrusive.min.js"></script>
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
