@model IEnumerable<Gerenciador_de_Produtos.Models.Tag>

@{
    ViewData["Title"] = "Tags";
}

<h1 class="display-4 text-center mb-5 text-primary">
    <i class="bi bi-tags-fill me-2"></i>@ViewData["Title"]
</h1>

<div class="mb-3 d-flex justify-content-between align-items-center">
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-lg me-1"></i>Criar Nova Tag
    </a>
    <input id="searchInput" type="text" class="form-control ms-3" placeholder="Buscar por nome ou ERP..." style="max-width:300px;" />
</div>

<div class="accordion" id="tagsAccordion">
    @foreach (var tag in Model)
    {
        var headingId = $"headingTag{tag.Id}";
        var collapseId = $"collapseTag{tag.Id}";
        <div class="accordion-item mb-3" data-filter="@(tag.Nome + " " + string.Join(" ", tag.ItemERPs.Select(i => i.ERP))).ToLower()">
            <h2 class="accordion-header" id="@headingId">
                <button class="accordion-button collapsed d-flex justify-content-between" type="button" data-bs-toggle="collapse" data-bs-target="#@collapseId" aria-expanded="false" aria-controls="@collapseId">
                    <div>
                        <strong>@tag.Nome</strong>
                        <small class="text-muted ms-2">(@tag.ItemERPs.Count() itens)</small>
                    </div>
                </button>
            </h2>
            <div id="@collapseId" class="accordion-collapse collapse" aria-labelledby="@headingId" data-bs-parent="#tagsAccordion">
                <div class="accordion-body bg-light p-4">
                    @if (tag.ItemERPs?.Any() == true)
                    {
                        <ul class="list-group">
                            @foreach (var item in tag.ItemERPs)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <span><i class="bi bi-box me-1"></i>@item.ERP <small class="text-muted">(@item.Id)</small></span>
                                    <div>
                                        <a asp-controller="ItensERP" asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info me-1" title="Ver Detalhes do Item">
                                            <i class="bi bi-eye me-1"></i>Detalhes
                                        </a>
                                        <a asp-controller="ItensERP" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary" title="Editar Item ERP">
                                            <i class="bi bi-pencil me-1"></i>Editar
                                        </a>
                                    </div>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p class="text-muted mb-0">Nenhum Item ERP vinculado.</p>
                    }
                    <hr />
                    <div class="text-end">
                        <a asp-action="Details" asp-route-id="@tag.Id" class="btn btn-sm btn-info me-1">
                            <i class="bi bi-eye"></i> Detalhes
                        </a>
                        <a asp-action="Edit" asp-route-id="@tag.Id" class="btn btn-sm btn-secondary me-1">
                            <i class="bi bi-pencil"></i> Editar
                        </a>
                        <a asp-action="Delete" asp-route-id="@tag.Id" class="btn btn-sm btn-danger">
                            <i class="bi bi-trash"></i> Excluir
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        document.getElementById('searchInput').addEventListener('input', function() {
            var filter = this.value.toLowerCase();
            document.querySelectorAll('#tagsAccordion .accordion-item').forEach(function(item) {
                var data = item.getAttribute('data-filter') || '';
                item.style.display = data.includes(filter) ? '' : 'none';
            });
        });
    </script>
}
