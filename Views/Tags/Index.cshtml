@model IEnumerable<Gerenciador_de_Produtos.Models.Tag>

@{
    ViewData["Title"] = "Tags";
}

<style>
    .toggle-icon {
        transition: transform 0.3s ease;
    }

    .toggle-collapsed .toggle-icon {
        transform: rotate(-90deg);
    }
</style>

<div class="mb-4">
    <h3 class="fw-bold mb-3">@ViewData["Title"]</h3>

    <div class="row g-2 mb-2">
        <div class="col-auto">
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-lg me-1"></i>Criar Nova Tag
            </a>
        </div>
        <div class="col">
            <input id="searchInput" class="form-control" placeholder="Buscar por nome ou ERP..." />
        </div>
    </div>
</div>

@foreach (var tag in Model)
{
    var searchText = $"{tag.Nome} {string.Join(" ", tag.ItemERPs.Select(i => i.ERP))}";
    <div class="card mb-4 shadow-sm"
         data-search="@searchText.ToLowerInvariant()">
        <div class="card-header d-flex align-items-center justify-content-between bg-light">
            <div class="d-flex align-items-center flex-grow-1">
                <button class="btn btn-sm btn-outline-secondary me-3 toggle-btn"
                        data-bs-toggle="collapse"
                        data-bs-target="#details_@tag.Id"
                        aria-expanded="false">
                    <i class="fas fa-chevron-down toggle-icon"></i>
                </button>
                <div>
                    <strong>@tag.Nome</strong> <span class="text-muted">(ID: @tag.Id)</span><br />
                    <small class="text-muted">@tag.ItemERPs?.Count() ERP(s)</small>
                </div>
            </div>
            <div>
                <a asp-action="Edit" asp-route-id="@tag.Id" class="btn btn-sm btn-outline-secondary">Editar</a>
                <a asp-action="Delete" asp-route-id="@tag.Id" class="btn btn-sm btn-outline-danger">Excluir</a>
            </div>
        </div>

        <div class="collapse" id="details_@tag.Id">
            <div class="card-body">
                @if (tag.ItemERPs != null && tag.ItemERPs.Any())
                {
                    <h6 class="mb-2">Itens ERP Vinculados</h6>
                    <table class="table table-sm table-hover table-bordered">
                        <thead class="table-light">
                            <tr>
                                <th>ERP</th>
                                <th>Descrição</th>
                                <th>Tipo</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in tag.ItemERPs)
                            {
                                <tr>
                                    <td>@item.ERP</td>
                                    <td>@item.Descricao</td>
                                    <td>@item.TipoItem</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="text-muted">Nenhum Item ERP vinculado.</div>
                }
            </div>
        </div>
    </div>
}

@section Scripts {
    <script>
        const inputBusca = document.getElementById('searchInput');

        inputBusca.addEventListener('input', function () {
            const termoBusca = inputBusca.value.toLowerCase();
            document.querySelectorAll('[data-search]').forEach(card => {
                const search = card.getAttribute('data-search');
                card.style.display = search.includes(termoBusca) ? '' : 'none';
            });
        });

        document.querySelectorAll('.toggle-btn').forEach(btn => {
            btn.classList.add('toggle-collapsed');
            btn.addEventListener('click', () => btn.classList.toggle('toggle-collapsed'));
        });
    </script>
}