@model Gerenciador_de_Produtos.Models.Tag

@{
    ViewData["Title"] = "Excluir Tag";
}

<h1>Excluir Tag</h1>

<h4>Tem certeza que deseja excluir esta tag?</h4>
<hr />
<div class="card mb-4">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">Nome</dt>
            <dd class="col-sm-10">@Model.Nome</dd>

            <dt class="col-sm-2">Itens ERP</dt>
            <dd class="col-sm-10">
                @if (Model.ItemERPs != null && Model.ItemERPs.Any())
                {
                    <ul>
                        @foreach (var item in Model.ItemERPs)
                        {
                            <li>@item.ERP (@item.Id)</li>
                        }
                    </ul>
                }
                else
                {
                    <em class="text-muted">Nenhum Item ERP vinculado</em>
                }
            </dd>
        </dl>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Excluir</button>
            <a asp-action="Index" class="btn btn-link">Cancelar</a>
        </form>
    </div>
</div>