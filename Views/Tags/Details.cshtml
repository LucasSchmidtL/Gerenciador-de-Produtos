@model Gerenciador_de_Produtos.Models.Tag

@{
    ViewData["Title"] = "Detalhes da Tag";
}

<h1>Detalhes da Tag</h1>

<div class="card mb-4">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">Nome</dt>
            <dd class="col-sm-10">@Model.Nome</dd>

            <dt class="col-sm-2">Itens ERP</dt>
            <dd class="col-sm-10">
                @if (Model.ItemERPs != null && Model.ItemERPs.Any())
                {
                    <ul>
                        @foreach (var item in Model.ItemERPs)
                        {
                            <li>@item.ERP (@item.Id)</li>
                        }
                    </ul>
                }
                else
                {
                    <em class="text-muted">Nenhum Item ERP vinculado</em>
                }
            </dd>
        </dl>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-secondary">Editar</a>
            <a asp-action="Index" class="btn btn-sm btn-link">Voltar</a>
        </div>
    </div>
</div>