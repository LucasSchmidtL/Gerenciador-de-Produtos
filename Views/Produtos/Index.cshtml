@model IEnumerable<Gerenciador_de_Produtos.Models.Produto>

@{
    ViewData["Title"] = "Produtos";
}

<h1>Produtos</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Criar Novo</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(m => m.First().NomeComercial)</th>
            <th>@Html.DisplayNameFor(m => m.First().Familia)</th>
            <th>@Html.DisplayNameFor(m => m.First().Precificacao)</th>
            <th>@Html.DisplayNameFor(m => m.First().DesenvolvimentoId)</th>
            <th>@Html.DisplayNameFor(m => m.First().Nivel)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.NomeComercial</td>
                <td>@item.Familia</td>
                <td>@item.Precificacao</td>
                <td>@item.DesenvolvimentoId</td>
                <td>@item.Nivel</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Excluir</a>
                </td>
            </tr>
            <tr>
                <td colspan="6" class="ps-5">
                    <a asp-controller="VariaveisProdutos"
                       asp-action="Create"
                       asp-route-produtoId="@item.Id"
                       class="btn btn-sm btn-success mb-2">
                        Adicionar Variável
                    </a>

                    @* Exibe variáveis cadastradas *@
                    @if (item.VariaveisProdutos != null && item.VariaveisProdutos.Any())
                    {
                        <strong>Variáveis:</strong>
                        <ul class="mb-0">
                            @foreach (var v in item.VariaveisProdutos)
                            {
                                <li>@v.Nome (@(v.Valor ?? "(sem valor)"))</li>
                            }
                        </ul>
                    }
                    else
                    {
                        <em class="text-muted">Nenhuma variável cadastrada.</em>
                    }

                    <hr />

                    @* Exibe agrupadores vinculados *@
                    <a asp-controller="AgrupadoresProduto"
                       asp-action="Create"
                       asp-route-produtoId="@item.Id"
                       class="btn btn-sm btn-warning mb-2 ms-2">
                        Adicionar Agrupador
                    </a>
                    @if (item.ProdutoAgrupadores != null && item.ProdutoAgrupadores.Any())
                    {
                        <strong>Agrupadores:</strong>
                        <ul class="mb-0">
                            @foreach (var ap in item.ProdutoAgrupadores)
                            {
                                <li>@ap.Agrupador.Nome</li>
                            }
                        </ul>
                    }
                    else
                    {
                        <em class="text-muted">Nenhum agrupador cadastrado.</em>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
