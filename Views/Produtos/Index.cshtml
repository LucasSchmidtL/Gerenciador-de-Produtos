@model IEnumerable<Gerenciador_de_Produtos.Models.Produto>

<!-- Removido título duplicado -->
<h1 class="display-4 text-center mb-5 text-primary">
    <i class="bi bi-box-seam me-2"></i>@ViewData["Title"]Produtos
</h1>

<div class="mb-3 d-flex justify-content-between align-items-center">
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-lg me-1"></i>Criar Novo
    </a>
    <input id="searchInput" type="text" class="form-control ms-3" placeholder="Buscar Nome ou Família..." style="max-width:300px;" />
</div>

<div class="accordion" id="produtosAccordion">
    @foreach (var produto in Model)
    {
        var headingId = $"heading{produto.Id}";
        var collapseId = $"collapse{produto.Id}";
        <div class="accordion-item mb-3" data-filter="@(produto.NomeComercial + " " + produto.Familia).ToLower()">
            <h2 class="accordion-header" id="@headingId">
                <button class="accordion-button collapsed d-flex justify-content-between"
                        type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#@collapseId"
                        aria-expanded="false"
                        aria-controls="@collapseId">
                    <div>
                        <strong>@produto.NomeComercial</strong>
                        <small class="text-muted ms-2">(@produto.Familia)</small>
                    </div>
                    <div>
                        <span class="badge bg-secondary">Nível @produto.Nivel</span>
                    </div>
                </button>
            </h2>
            <div id="@collapseId"
                 class="accordion-collapse collapse"
                 aria-labelledby="@headingId"
                 data-bs-parent="#produtosAccordion">
                <div class="accordion-body bg-light p-4">
                    <div class="mb-3">
                        <strong>Precificação:</strong> @produto.Precificacao<br />
                        <strong>Desenvolvimento:</strong> @produto.DesenvolvimentoId
                    </div>
                    <div class="bg-white p-3 rounded mb-4">
                        <h6 class="mb-2">Variáveis</h6>
                        <a asp-controller="VariaveisProdutos"
                           asp-action="Create"
                           asp-route-produtoId="@produto.Id"
                           class="btn btn-sm btn-outline-success mb-2">
                            + Adicionar Variável
                        </a>
                        @if (produto.VariaveisProdutos?.Any() == true)
                        {
                            <ul class="list-group">
                                @foreach (var v in produto.VariaveisProdutos)
                                {
                                    <li class="list-group-item">
                                        @v.Nome: <em>@(v.Valor ?? "(sem valor)")</em>
                                    </li>
                                }
                            </ul>
                        }
                        else
                        {
                            <p class="text-muted mb-0">Nenhuma variável cadastrada.</p>
                        }
                    </div>
                    <div class="bg-white p-3 rounded mb-4">
                        <h6 class="mb-2">Agrupadores</h6>
                        <a asp-controller="AgrupadoresProduto"
                           asp-action="Create"
                           asp-route-produtoId="@produto.Id"
                           class="btn btn-sm btn-outline-warning mb-2">
                            + Adicionar Agrupador
                        </a>
                        @if (produto.ProdutoAgrupadores?.Any() == true)
                        {
                            <ul class="list-group">
                                @foreach (var ap in produto.ProdutoAgrupadores)
                                {
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        @ap.Agrupador.Nome
                                        <div>
                                            <a asp-controller="AgrupadoresProduto"
                                               asp-action="Edit"
                                               asp-route-id="@ap.Id"
                                               class="btn btn-sm btn-outline-secondary">Editar</a>
                                            <a asp-controller="AgrupadoresProduto"
                                               asp-action="Details"
                                               asp-route-id="@ap.Id"
                                               class="btn btn-sm btn-outline-info ms-1">Detalhes</a>
                                        </div>
                                    </li>
                                }
                            </ul>
                        }
                        else
                        {
                            <p class="text-muted mb-0">Nenhum agrupador cadastrado.</p>
                        }
                    </div>
                    <div class="text-end">
                        <a asp-action="Details" asp-route-id="@produto.Id" class="btn btn-sm btn-info me-1">
                            <i class="bi bi-eye"></i> Detalhes
                        </a>
                        <a asp-action="Edit" asp-route-id="@produto.Id" class="btn btn-sm btn-secondary me-1">
                            <i class="bi bi-pencil"></i> Editar
                        </a>
                        <a asp-action="Delete" asp-route-id="@produto.Id" class="btn btn-sm btn-danger">
                            <i class="bi bi-trash"></i> Excluir
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        document.getElementById('searchInput').addEventListener('input', function() {
            var filter = this.value.toLowerCase();
            document.querySelectorAll('#produtosAccordion .accordion-item').forEach(function(item) {
                var data = item.getAttribute('data-filter') || '';
                item.style.display = data.includes(filter) ? '' : 'none';
            });
        });
    </script>
}
