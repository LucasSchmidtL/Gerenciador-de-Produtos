@model Gerenciador_de_Produtos.Models.Desenho
@using Gerenciador_de_Produtos.Models
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Editar Desenho";
}

<h1 class="mb-4">@ViewData["Title"]</h1>

<div class="card shadow-sm border-0">
    <div class="card-body">
        <form asp-action="Edit">
            <input type="hidden" asp-for="DesenhoId" />

            <div class="mb-3">
                <label asp-for="Nome" class="form-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Descricao" class="form-label"></label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Revisao" class="form-label"></label>
                <input asp-for="Revisao" class="form-control" />
                <span asp-validation-for="Revisao" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Status" class="form-label"></label>
                <select asp-for="Status" class="form-select" asp-items="Html.GetEnumSelectList<StatusDesenho>()">
                    <option value="">-- selecione --</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Classificacao" class="form-label"></label>
                <input asp-for="Classificacao" class="form-control" />
                <span asp-validation-for="Classificacao" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="SolicitacaoAlteracaoId" class="form-label"></label>
                <input asp-for="SolicitacaoAlteracaoId" class="form-control" />
                <span asp-validation-for="SolicitacaoAlteracaoId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ItemERPId" class="form-label"></label>
                <select asp-for="ItemERPId" class="form-select" asp-items="ViewBag.ItemERPId"></select>
                <span asp-validation-for="ItemERPId" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-outline-secondary">Voltar</a>
                <button type="submit" class="btn btn-primary">Salvar</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
