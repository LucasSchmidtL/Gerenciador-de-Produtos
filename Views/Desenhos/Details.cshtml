@model Gerenciador_de_Produtos.Models.Desenho

@{
    ViewData["Title"] = "Detalhes do Desenho";
}

<h1 class="mb-4">@ViewData["Title"]</h1>

<div class="card shadow-sm border-0 mb-4">
    <div class="card-header bg-light border-bottom">
        <h5 class="mb-0">Informações do Desenho</h5>
    </div>
    <div class="card-body">
        <div class="row g-3">
            <div class="col-md-6">
                <strong>ID:</strong> @Model.DesenhoId
            </div>
            <div class="col-md-6">
                <strong>Nome:</strong> @Model.Nome
            </div>
            <div class="col-md-6">
                <strong>Descrição:</strong> @Model.Descricao
            </div>
            <div class="col-md-6">
                <strong>Revisão:</strong> @Model.Revisao
            </div>
            <div class="col-md-6">
                <strong>Status:</strong>
                <span class="badge bg-@GetStatusColor(Model.Status)">
                    @Model.Status
                </span>
            </div>
            <div class="col-md-6">
                <strong>Classificação:</strong> @Model.Classificacao
            </div>
            <div class="col-md-6">
                <strong>Solicitação Alteração:</strong> @Model.SolicitacaoAlteracaoId
            </div>
            <div class="col-md-6">
                <strong>Data Criação:</strong> @(Model.DataCriacao?.ToString("dd/MM/yyyy") ?? "N/D")
            </div>
        </div>
    </div>

    <div class="card-footer border-top bg-light">
        <h5 class="mb-2">Itens ERP Relacionados</h5>
        @if (Model.DesenhoItemERPs != null && Model.DesenhoItemERPs.Any())
        {
            <ul class="list-group list-group-flush">
                @foreach (var item in Model.DesenhoItemERPs)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <span>@item.ItemERP?.ERP</span>
                        <small class="text-muted">ID: @item.ItemERPId</small>
                    </li>
                }
            </ul>
        }
        else
        {
            <p class="text-muted">Nenhum item ERP vinculado a este desenho.</p>
        }
    </div>
</div>

<div class="d-flex justify-content-between">
    <a asp-action="Edit" asp-route-id="@Model.DesenhoId" class="btn btn-outline-secondary">
        <i class="bi bi-pencil-square me-1"></i> Editar
    </a>
    <a asp-action="Index" class="btn btn-outline-info">
        <i class="bi bi-arrow-left me-1"></i> Voltar
    </a>
</div>

@functions {
    private string GetStatusColor(StatusDesenho status)
    {
        return status switch
        {
            StatusDesenho.Ativo => "success",
            StatusDesenho.NaoAtivo => "warning",
            StatusDesenho.Obsoleto => "danger",
            _ => "secondary"
        };
    }
}
