@using System.ComponentModel.DataAnnotations
@model IEnumerable<Gerenciador_de_Produtos.Models.Desenho>

@{
    ViewData["Title"] = "Desenhos";
}

<style>
    .toggle-icon {
        transition: transform 0.3s ease;
    }

    .toggle-collapsed .toggle-icon {
        transform: rotate(-90deg);
    }
</style>

<div class="mb-4">
    <h3 class="fw-bold mb-3">@ViewData["Title"]</h3>

    <div class="row g-2 mb-2">
        <div class="col-auto">
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-lg me-1"></i>Criar Novo
            </a>
        </div>
        <div class="col">
            <input id="searchInput" class="form-control" placeholder="Buscar Nome ou Descrição..." />
        </div>
    </div>

    <!-- Filtros adicionais -->
    <div class="row g-2 mb-3">
        <div class="col-md-3">
            <select id="filtroStatus" class="form-select">
                <option value="">Filtrar por Status</option>
                <option value="Ativo">Ativo</option>
                <option value="NaoAtivo">Não Ativo</option>
                <option value="Obsoleto">Obsoleto</option>
            </select>
        </div>
        <div class="col-md-3">
            <input id="filtroClassificacao" class="form-control" placeholder="Filtrar por Classificação..." />
        </div>
        <div class="col-md-3">
            <input id="filtroProduto" class="form-control" placeholder="Filtrar por Produto..." />
        </div>

    </div>
</div>

@foreach (var item in Model)
{
    var searchText = $"{item.Nome} {item.Descricao} {item.Status} {item.Classificacao} {item.SolicitacaoAlteracaoId}";
    <div class="card mb-4 shadow-sm"
         data-search="@searchText.ToLowerInvariant()"
         data-status="@item.Status"
         data-classificacao="@item.Classificacao?.ToLowerInvariant()"
         data-solicitacao="@item.SolicitacaoAlteracaoId?.ToString().ToLowerInvariant()">

        <div class="card-header d-flex align-items-center justify-content-between bg-light">
            <div class="d-flex align-items-center flex-grow-1">
                <button class="btn btn-sm btn-outline-secondary me-3 toggle-btn"
                        data-bs-toggle="collapse"
                        data-bs-target="#details_@item.DesenhoId"
                        aria-expanded="false">
                    <i class="fas fa-chevron-down toggle-icon"></i>
                </button>
                <div>
                    <strong>@item.Nome</strong> 
                    <span class="badge bg-@GetStatusColor(item.Status)"> @item.Status</span>
                    <br />
                    <small class="text-muted">@item.Descricao</small>
                </div>
            </div>
            <div>
                <a asp-action="Edit" asp-route-id="@item.DesenhoId" class="btn btn-sm btn-outline-secondary">Editar</a>
                <a asp-action="Delete" asp-route-id="@item.DesenhoId" class="btn btn-sm btn-outline-danger">Excluir</a>
            </div>
        </div>

        <div class="collapse" id="details_@item.DesenhoId">
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-3"><strong>Data de Criação:</strong> @(item.DataCriacao?.ToString("dd/MM/yyyy") ?? "N/D")</div>
                    <div class="col-md-3"><strong>Revisão:</strong> @item.Revisao</div>
                    @* <div class="col-md-3">
                        <strong>Status:</strong>
                        <span class="badge bg-@GetStatusColor(item.Status)">
                            @GetDisplayName(item.Status)
                        </span>
                    </div> *@
                    <div class="col-md-3"><strong>Classificação:</strong> @item.Classificacao</div>
                    <div class="col-md-3">
                        <strong>Solicitação de Alteração:</strong> @item.SolicitacaoAlteracaoId
                    </div>
                </div>


                <hr class="my-3" />

                @if (item.DesenhoItemERPs != null && item.DesenhoItemERPs.Any())
                {
                    <h6 class="mb-2">Itens ERP Vinculados</h6>
                    <table class="table table-sm table-hover table-bordered">
                        <thead class="table-light">
                            <tr>
                                <th>ERP</th>
                                <th>Descrição</th>
                                <th>Tipo</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var link in item.DesenhoItemERPs)
                            {
                                <tr>
                                    <td>@link.ItemERP?.ERP</td>
                                    <td>@link.ItemERP?.Descricao</td>
                                    <td>@link.ItemERP?.TipoItem</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="text-muted">Nenhum Item ERP vinculado.</div>
                }
            </div>
        </div>
    </div>
}

@section Scripts {
    <script>
        function filtrarCartoes() {
            const termoBusca = document.getElementById('searchInput').value.toLowerCase();
            const filtroStatus = document.getElementById('filtroStatus').value;
            const filtroClassificacao = document.getElementById('filtroClassificacao').value.toLowerCase();
            const filtroProduto = document.getElementById('filtroProduto').value.toLowerCase();
            const produto = card.getAttribute('data-produto');
            const correspondeProduto = !filtroProduto || produto.includes(filtroProduto);
            card.style.display = (
                correspondeTexto &&
                correspondeStatus &&
                correspondeClassificacao &&
                correspondeProduto
             ) ? '' : 'none';

            document.querySelectorAll('[data-search]').forEach(card => {
                const search = card.getAttribute('data-search');
                const status = card.getAttribute('data-status');
                const classificacao = card.getAttribute('data-classificacao');
                const solicitacao = card.getAttribute('data-solicitacao');

                const correspondeTexto = search.includes(termoBusca);
                const correspondeStatus = !filtroStatus || status === filtroStatus;
                const correspondeClassificacao = !filtroClassificacao || classificacao.includes(filtroClassificacao);
                const correspondeSolicitacao = !filtroSolicitacao || solicitacao.includes(filtroSolicitacao);

                card.style.display = (correspondeTexto && correspondeStatus && correspondeClassificacao && correspondeSolicitacao) ? '' : 'none';
            });
        }

        document.getElementById('searchInput').addEventListener('input', filtrarCartoes);
        document.getElementById('filtroStatus').addEventListener('change', filtrarCartoes);
        document.getElementById('filtroClassificacao').addEventListener('input', filtrarCartoes);
        document.getElementById('filtroSolicitacao').addEventListener('input', filtrarCartoes);

        document.querySelectorAll('.toggle-btn').forEach(btn => {
            btn.classList.add('toggle-collapsed');
            btn.addEventListener('click', () => btn.classList.toggle('toggle-collapsed'));
        });
    </script>
}

@functions {
    private string GetStatusColor(StatusDesenho status)
    {
        return status switch
        {
            StatusDesenho.Ativo => "success",
            StatusDesenho.NaoAtivo => "warning",
            StatusDesenho.Obsoleto => "secondary",
            _ => "dark"
        };
    }

    private string GetDisplayName(Enum value)
    {
        var field = value.GetType().GetField(value.ToString());
        var attribute = field?.GetCustomAttributes(typeof(DisplayAttribute), false)
                             .FirstOrDefault() as DisplayAttribute;
        return attribute?.Name ?? value.ToString();
    }

}
