@model Gerenciador_de_Produtos.Models.ViewModels.DesenhoViewModel

@{
    ViewData["Title"] = "Novo Desenho";
}

<h1>@ViewData["Title"]</h1>
<hr />

@if (!ViewData.ModelState.IsValid && ViewData.ModelState.Values.Any(v => v.Errors.Count > 0))
{
    <div class="alert alert-warning">
        <strong>Erros encontrados:</strong>
        <ul>
            @foreach (var entry in ViewData.ModelState)
            {
                foreach (var error in entry.Value.Errors)
                {
                    <li><strong>@entry.Key:</strong> @error.ErrorMessage</li>
                }
            }
        </ul>
    </div>
}

<div class="row">
    <div class="col-md-8">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="mb-3">
                <label asp-for="Nome" class="form-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Descricao" class="form-label"></label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Revisao" class="form-label"></label>
                <input asp-for="Revisao" class="form-control" />
                <span asp-validation-for="Revisao" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Status" class="form-label"></label>
                <select asp-for="Status" class="form-select">
                    <option value="">Selecione o status</option>
                    @foreach (var status in Enum.GetValues(typeof(Gerenciador_de_Produtos.Models.StatusDesenho)))
                    {
                        <option value="@status">@status</option>
                    }
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Classificacao" class="form-label"></label>
                <input asp-for="Classificacao" class="form-control" />
                <span asp-validation-for="Classificacao" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="SolicitacaoAlteracaoId" class="form-label"></label>
                <input asp-for="SolicitacaoAlteracaoId" class="form-control" />
                <span asp-validation-for="SolicitacaoAlteracaoId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label for="SelectedItemERPIds" class="form-label">Itens ERP Relacionados</label>
                <select asp-for="SelectedItemERPIds" class="form-select" asp-items="Model.AllItemERPs" multiple size="6"></select>
                <span asp-validation-for="SelectedItemERPIds" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-success">Salvar</button>
            <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
