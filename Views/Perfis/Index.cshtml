@model List<Gerenciador_de_Produtos.Models.ViewModels.PerfilItemERPViewModel>

@{
    ViewData["Title"] = "Perfis";
}

<style>
    .toggle-icon {
        transition: transform 0.3s ease;
    }

    .toggle-collapsed .toggle-icon {
        transform: rotate(-90deg);
    }
</style>

<div class="mb-4">
    <h3 class="fw-bold mb-3">@ViewData["Title"]</h3>

    <div class="row g-2 mb-2">
        <div class="col-auto">
            <a asp-action="Import" class="btn btn-outline-dark rounded-pill px-3">
                <i class="bi bi-upload me-1"></i> Importar CSV
            </a>
            <a asp-action="Create" class="btn btn-primary rounded-pill px-3 ms-2">
                <i class="bi bi-plus-circle me-1"></i> Novo Perfil
            </a>
        </div>
        <div class="col">
            <input id="searchInput" class="form-control" placeholder="Buscar perfil..." />
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }
</div>

@foreach (var vm in Model)
{
    var searchText = $"{vm.ERP} {vm.Descricao} {vm.TipoSecao} {vm.DesenhoNome}";
    <div class="card mb-4 shadow-sm"
         data-search="@searchText.ToLowerInvariant()">
        <div class="card-header d-flex align-items-center justify-content-between bg-light">
            <div class="d-flex align-items-center flex-grow-1">
                <button class="btn btn-sm btn-outline-secondary me-3 toggle-btn"
                        data-bs-toggle="collapse"
                        data-bs-target="#details_@vm.Id"
                        aria-expanded="false">
                    <i class="fas fa-chevron-down toggle-icon"></i>
                </button>
                <div>
                    <strong>@vm.Descricao</strong><br />
                    <small class="text-muted">@vm.ERP</small>
                </div>
            </div>
            <div>
                <a asp-action="Details" asp-route-id="@vm.Id" class="btn btn-sm btn-outline-info rounded-pill px-3 py-1">
                    <i class="bi bi-eye me-1"></i> Detalhes
                </a>
                <a asp-action="Edit" asp-route-id="@vm.Id" class="btn btn-sm btn-outline-secondary rounded-pill px-3 py-1">
                    <i class="bi bi-pencil me-1"></i> Editar
                </a>
                <a asp-action="Delete" asp-route-id="@vm.Id" class="btn btn-sm btn-outline-danger rounded-pill px-3 py-1">
                    <i class="bi bi-trash me-1"></i> Excluir
                </a>
            </div>
        </div>

        <div class="collapse" id="details_@vm.Id">
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-4"><strong>Tipo de Seção:</strong> @vm.TipoSecao</div>
                    <div class="col-md-4"><strong>ID:</strong> @vm.Id</div>
                </div>

                <hr class="my-3" />

                @if (vm.TodosItensERP != null && vm.ItensERPSelecionados.Any())
                {
                    <h6 class="mb-2">Itens ERP Vinculados</h6>
                    <table class="table table-sm table-hover table-bordered">
                        <thead class="table-light">
                            <tr>
                                <th>ERP</th>
                                <th>Descrição</th>
                                <th>Tipo</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var erp in vm.TodosItensERP.Where(x => vm.ItensERPSelecionados.Contains(int.Parse(x.Value))))
                            {
                                var parts = erp.Text.Split('|');
                                if (parts.Length == 3)
                                {
                                    <tr>
                                        <td>@parts[0]</td>
                                        <td>@parts[1]</td>
                                        <td>@parts[2]</td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="text-muted">Nenhum Item ERP vinculado.</div>
                }

                <hr class="my-3" />

                <h6 class="mb-2">Desenhos Vinculados</h6>
                @if (vm.TodosDesenhos != null && vm.DesenhosSelecionados.Any())
                {
                    <ul class="list-group">
                        @foreach (var desenho in vm.TodosDesenhos.Where(d => vm.DesenhosSelecionados.Contains(int.Parse(d.Value))))
                        {
                            <li class="list-group-item">
                                @desenho.Text
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <div class="text-muted">Nenhum desenho vinculado.</div>
                }
            </div>
        </div>
    </div>
}

@section Scripts {
    <script>
        document.getElementById('searchInput').addEventListener('input', function () {
            const term = this.value.toLowerCase();
            document.querySelectorAll('[data-search]').forEach(card => {
                card.style.display = card.getAttribute('data-search').includes(term) ? '' : 'none';
            });
        });

        document.querySelectorAll('.toggle-btn').forEach(btn => {
            btn.classList.add('toggle-collapsed');
            btn.addEventListener('click', () => btn.classList.toggle('toggle-collapsed'));
        });
    </script>
}