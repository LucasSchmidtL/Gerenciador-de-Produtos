                <div class="col-md-3"><label asp-for="jy" class="form-label"></label><input asp-for="jy" class="form-control" /></div>
                <div class="col-md-3"><label asp-for="Cw" class="form-label"></label><input asp-for="Cw" class="form-control" /></div>
                <div class="col-md-3"><label asp-for="J" class="form-label"></label><input asp-for="J" class="form-control" /></div>

                @* Eixos Equivalentes *@
                <div class="col-md-3"><label asp-for="Ixe" class="form-label"></label><input asp-for="Ixe" class="form-control" /></div>
                <div class="col-md-3"><label asp-for="Sxet" class="form-label"></label><input asp-for="Sxet" class="form-control" /></div>
                <div class="col-md-3"><label asp-for="Sxeb" class="form-label"></label><input asp-for="Sxeb" class="form-control" /></div>
                <div class="col-md-3"><label asp-for="lye" class="form-label"></label><input asp-for="lye" class="form-control" /></div>
                <div class="col-md-3"><label asp-for="Syel" class="form-label"></label><input asp-for="Syel" class="form-control" /></div>
                <div class="col-md-3"><label asp-for="Syer" class="form-label"></label><input asp-for="Syer" class="form-control" /></div>

                @* Auxiliares *@
                <div class="col-md-3"><label asp-for="p1" class="form-label"></label><input asp-for="p1" class="form-control" /></div>
                <div class="col-md-3"><label asp-for="p2" class="form-label"></label><input asp-for="p2" class="form-control" /></div>
                <div class="col-md-3"><label asp-for="p3" class="form-label"></label><input asp-for="p3" class="form-control" /></div>

                @* Booleanos como checkbox *@
                <div class="col-md-3">
                    <div class="form-check mt-4">
                        <input asp-for="SimetricoX" class="form-check-input" type="checkbox" />
                        <label asp-for="SimetricoX" class="form-check-label"></label>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-check mt-4">
                        <input asp-for="SimetricoY" class="form-check-input" type="checkbox" />
                        <label asp-for="SimetricoY" class="form-check-label"></label>
                    </div>
                </div>
            </div>


            <div class="card shadow-sm border-0 mt-4">
                <div class="card-header bg-light border-bottom fw-semibold">
                    <i class="bi bi-link-45deg text-success me-1"></i> Relacionar Itens ERP
                </div>
                <div class="card-body">
                    <div class="row g-3 mb-3">
                        <div class="col-md-3">
                            <label class="form-label">Tipo</label>
                            <select id="filtroTipo" class="form-select">
                                <option value="">-- Todos --</option>
                                <option value="Perfil">Perfil</option>
                                <option value="Componente">Componente</option>
                                <option value="Galvanizado">Galvanizado</option>
                            </select>
                        </div>

                        <div class="col-md-3">
                            <label class="form-label">Status</label>
                            <select id="filtroStatus" class="form-select">
                                <option value="">-- Todos --</option>
                                <option value="Ativo">Ativo</option>
                                <option value="Não Ativo">Não Ativo</option>
                                <option value="Obsoleto">Obsoleto</option>
                            </select>
                        </div>

                        <div class="col-md-3">
                            <label class="form-label">Tag</label>
                            <select id="filtroTag" class="form-select">
                                <option value="">-- Todas --</option>
                                @foreach (var tag in tags)
                                {
                                    <option value="@tag">@tag</option>
                                }
                            </select>
                        </div>

                        <div class="col-md-3 d-flex align-items-end">
                            <button type="button" id="limparFiltros" class="btn btn-outline-secondary w-100">
                                <i class="bi bi-x-circle me-1"></i> Limpar Filtros
                            </button>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Itens ERP Relacionados</label>
                        <select asp-for="ItensERPSelecionados" id="erpSelect" class="form-select w-100" multiple></select>
                        <span asp-validation-for="ItensERPSelecionados" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="mt-5 d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">
                    <i class="bi bi-arrow-left me-1"></i> Voltar
                </a>
                <button type="submit" class="btn btn-primary rounded-pill px-4">
                    <i class="bi bi-save me-1"></i> Salvar
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

    <script>
        function formatItem(item) {
            if (!item.id) return item.text;
            const parts = item.text.split('|');
            return $('<span><strong>' + parts[0] + '</strong> - ' + parts[1] + ' <small class="text-muted">(' + parts[2] + ')</small></span>');
        }

        const itensPreSelecionados = [
        @foreach (var item in Model.TodosItensERP.Where(x => Model.ItensERPSelecionados.Contains(int.Parse(x.Value))))
        {
            <text>{ id: '@item.Value', text: '@item.Text' },</text>
        }
        ];

        const $erpSelect = $('#erpSelect');

        $erpSelect.select2({
            placeholder: "Buscar Itens ERP...",
            ajax: {
                url: '/ItensERP/BuscarItensERP',
                dataType: 'json',
                delay: 250,
                data: function (params) {
                    return {
                        term: params.term,
                        tipo: $('#filtroTipo').val(),
                        status: $('#filtroStatus').val(),
                        tag: $('#filtroTag').val()
                    };
                },
                processResults: function (data) {
                    return { results: data };
                },
                cache: true
            },
            templateResult: formatItem,
            templateSelection: function (item) {
                if (!item.id) return item.text;
                return item.text.split('|')[0];
            },
            width: '100%',
            allowClear: true
        });

        itensPreSelecionados.forEach(i => {
            const option = new Option(i.text, i.id, true, true);
            $erpSelect.append(option).trigger('change');
        });

        $('#filtroTipo, #filtroStatus, #filtroTag').on('change', function () {
            $erpSelect.select2('open');
        });

        $('#limparFiltros').on('click', function () {
            $('#filtroTipo, #filtroStatus, #filtroTag').val('');
            $erpSelect.select2('open');
        });
    </script>

    @await Html.PartialAsync("_ValidationScriptsPartial")
}
