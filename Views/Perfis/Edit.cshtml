@model Gerenciador_de_Produtos.Models.ViewModels.PerfilItemERPViewModel
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Editar Perfil";
    var tags = ViewBag.TodasTags as List<string> ?? new List<string>();
}

<h1 class="display-6 fw-bold text-primary mb-4">
    <i class="bi bi-pencil-square me-2"></i>@ViewData["Title"]
</h1>

<!-- CARD: INFORMAÇÕES DO PERFIL -->
<div class="card shadow-sm border-0 mb-4">
    <div class="card-header bg-light border-bottom fw-semibold">
        <i class="bi bi-info-circle me-1 text-primary"></i> Informações do Perfil
    </div>
    <div class="card-body p-4">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="row g-4 mb-3">
                <div class="col-md-6">
                    <label asp-for="Descricao" class="form-label">Descrição</label>
                    <input asp-for="Descricao" class="form-control" />
                    <span asp-validation-for="Descricao" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="TipoSecao" class="form-label">Tipo de Seção</label>
                    <input asp-for="TipoSecao" class="form-control" />
                    <span asp-validation-for="TipoSecao" class="text-danger"></span>
                </div>
            </div>

            <!-- CARD: DADOS TÉCNICOS -->
            <div class="row row-cols-1 row-cols-md-2 g-4">
                <div class="col">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-header bg-light fw-semibold">
                            <i class="bi bi-sliders me-1"></i> Geometria e Propriedades X/Y
                        </div>
                        <div class="card-body">
                            <div class="row g-3">
                                <div class="col-md-6"><label asp-for="Peso" class="form-label"></label><input asp-for="Peso" class="form-control" /></div>
                                <div class="col-md-6"><label asp-for="AreaBruta" class="form-label"></label><input asp-for="AreaBruta" class="form-control" /></div>
                                <div class="col-md-6"><label asp-for="AreaLiq" class="form-label"></label><input asp-for="AreaLiq" class="form-control" /></div>
                                <div class="col-md-6"><label asp-for="AreaEq" class="form-label"></label><input asp-for="AreaEq" class="form-control" /></div>
                                <div class="col-md-6"><label asp-for="Ix" class="form-label"></label><input asp-for="Ix" class="form-control" /></div>
                                <div class="col-md-6"><label asp-for="Iy" class="form-label"></label><input asp-for="Iy" class="form-control" /></div>
                                <div class="col-md-6"><label asp-for="Zx" class="form-label"></label><input asp-for="Zx" class="form-control" /></div>
                                <div class="col-md-6"><label asp-for="Zy" class="form-label"></label><input asp-for="Zy" class="form-control" /></div>
                                <div class="col-md-6"><label asp-for="Sxt" class="form-label"></label><input asp-for="Sxt" class="form-control" /></div>
                                <div class="col-md-6"><label asp-for="Sxb" class="form-label"></label><input asp-for="Sxb" class="form-control" /></div>
                                <div class="col-md-6"><label asp-for="Syl" class="form-label"></label><input asp-for="Syl" class="form-control" /></div>
                                <div class="col-md-6"><label asp-for="Syr" class="form-label"></label><input asp-for="Syr" class="form-control" /></div>
                                <div class="col-md-6"><label asp-for="Rx" class="form-label"></label><input asp-for="Rx" class="form-control" /></div>
                                <div class="col-md-6"><label asp-for="ry" class="form-label"></label><input asp-for="ry" class="form-control" /></div>
                                <div class="col-md-6"><label asp-for="yt" class="form-label"></label><input asp-for="yt" class="form-control" /></div>
                                <div class="col-md-6"><label asp-for="yb" class="form-label"></label><input asp-for="yb" class="form-control" /></div>
                                <div class="col-md-6"><label asp-for="Ixy" class="form-label"></label><input asp-for="Ixy" class="form-control" /></div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-header bg-light fw-semibold">
                            <i class="bi bi-rulers me-1"></i> Coordenadas, Torção e Extras
                        </div>
                        <div class="card-body">
                            <div class="row g-3">
                                <div class="col-md-6"><label asp-for="xl" class="form-label"></label><input asp-for="xl" class="form-control" /></div>
                                <div class="col-md-6"><label asp-for="xr" class="form-label"></label><input asp-for="xr" class="form-control" /></div>
                                <div class="col-md-6"><label asp-for="xo" class="form-label"></label><input asp-for="xo" class="form-control" /></div>
                                <div class="col-md-6"><label asp-for="yo" class="form-label"></label><input asp-for="yo" class="form-control" /></div>
                                <div class="col-md-6"><label asp-for="jx" class="form-label"></label><input asp-for="jx" class="form-control" /></div>
                                <div class="col-md-6"><label asp-for="jy" class="form-label"></label><input asp-for="jy" class="form-control" /></div>
                                <div class="col-md-6"><label asp-for="Cw" class="form-label"></label><input asp-for="Cw" class="form-control" /></div>
                                <div class="col-md-6"><label asp-for="J" class="form-label"></label><input asp-for="J" class="form-control" /></div>
                                <div class="col-md-6"><label asp-for="Ixe" class="form-label"></label><input asp-for="Ixe" class="form-control" /></div>
                                <div class="col-md-6"><label asp-for="Sxet" class="form-label"></label><input asp-for="Sxet" class="form-control" /></div>
                                <div class="col-md-6"><label asp-for="Sxeb" class="form-label"></label><input asp-for="Sxeb" class="form-control" /></div>
                                <div class="col-md-6"><label asp-for="lye" class="form-label"></label><input asp-for="lye" class="form-control" /></div>
                                <div class="col-md-6"><label asp-for="Syel" class="form-label"></label><input asp-for="Syel" class="form-control" /></div>
                                <div class="col-md-6"><label asp-for="Syer" class="form-label"></label><input asp-for="Syer" class="form-control" /></div>
                                <div class="col-md-4"><label asp-for="p1" class="form-label"></label><input asp-for="p1" class="form-control" /></div>
                                <div class="col-md-4"><label asp-for="p2" class="form-label"></label><input asp-for="p2" class="form-control" /></div>
                                <div class="col-md-4"><label asp-for="p3" class="form-label"></label><input asp-for="p3" class="form-control" /></div>
                                <div class="col-md-6">
                                    <div class="form-check mt-4">
                                        <input asp-for="SimetricoX" class="form-check-input" type="checkbox" />
                                        <label asp-for="SimetricoX" class="form-check-label"></label>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-check mt-4">
                                        <input asp-for="SimetricoY" class="form-check-input" type="checkbox" />
                                        <label asp-for="SimetricoY" class="form-check-label"></label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


            <div class="mb-3">
                <label class="form-label">Itens ERP Relacionados</label>
                <ul class="list-group mb-3">
                    @foreach (var item in ViewBag.ItensSelecionados as List<SelectListItem>)
                    {
                        var parts = item.Text.Split('|');
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                <strong>@parts[0]</strong> - @parts[1]
                                <small class="text-muted">(@parts[2])</small>
                            </div>
                        </li>
                    }
                </ul>
            </div>

            <div class="card shadow-sm border-0 mt-4">
                <div class="card-header bg-light border-bottom fw-semibold">
                    <i class="bi bi-link-45deg text-success me-1"></i> Relacionar Itens ERP
                </div>
                <div class="card-body">
                    <div class="row g-3 mb-3">
                        <div class="col-md-3">
                            <label class="form-label">Tipo</label>
                            <select id="filtroTipo" class="form-select">
                                <option value="">-- Todos --</option>
                                <option value="Perfil">Perfil</option>
                                <option value="Componente">Componente</option>
                                <option value="Galvanizado">Galvanizado</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">Status</label>
                            <select id="filtroStatus" class="form-select">
                                <option value="">-- Todos --</option>
                                <option value="Ativo">Ativo</option>
                                <option value="Não Ativo">Não Ativo</option>
                                <option value="Obsoleto">Obsoleto</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">Tag</label>
                            <select id="filtroTag" class="form-select">
                                <option value="">-- Todas --</option>
                                @foreach (var tag in ViewBag.AllTags as List<SelectListItem>)
                                {
                                    <option value="@tag.Value">@tag.Text</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-3 d-flex align-items-end">
                            <button type="button" id="limparFiltros" class="btn btn-outline-secondary w-100">
                                <i class="bi bi-x-circle me-1"></i> Limpar Filtros
                            </button>
                        </div>
                    </div>

                    <select id="erpSelect" name="ItensERPSelecionados" multiple class="form-select w-100"></select>
                    <span asp-validation-for="ItensERPSelecionados" class="text-danger"></span>
                </div>
            </div>


            <div class="card shadow-sm border-0 mt-4">
                <div class="card-header bg-light border-bottom fw-semibold">
                    <i class="bi bi-vector-pen text-primary me-1"></i> Relacionar Desenhos
                </div>
                <div class="card-body">
                    <div class="row g-3 mb-3">
                        <div class="col-md-4">
                            <label class="form-label">Status</label>
                            <select id="filtroStatusDesenho" class="form-select">
                                <option value="">-- Todos --</option>
                                <option value="Ativo">Ativo</option>
                                <option value="Não Ativo">Não Ativo</option>
                                <option value="Obsoleto">Obsoleto</option>
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Classificação</label>
                            <select id="filtroClassificacaoDesenho" class="form-select">
                                <option value="">-- Todas --</option>
                                @foreach (var c in ViewBag.ClassificacoesDesenho as List<SelectListItem>)
                                {
                                    <option value="@c.Value">@c.Text</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Revisão</label>
                            <select id="filtroRevisaoDesenho" class="form-select">
                                <option value="">-- Todas --</option>
                                @foreach (var r in ViewBag.RevisoesDesenho as List<SelectListItem>)
                                {
                                    <option value="@r.Value">@r.Text</option>
                                }
                            </select>
                        </div>
                    </div>

                    <select id="desenhoSelect" name="DesenhosSelecionados" multiple class="form-select w-100"></select>
                    <span asp-validation-for="DesenhosSelecionados" class="text-danger"></span>
                </div>
            </div>



            <div class="d-flex justify-content-between mt-4">
                <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">
                    <i class="bi bi-arrow-left me-1"></i>Voltar
                </a>
                <button type="submit" class="btn btn-primary rounded-pill px-4">
                    <i class="bi bi-save me-1"></i>Salvar
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

    <script>
        function formatItem(item) {
            if (!item.id) return item.text;
            const parts = item.text.split('|');
            return $('<span><strong>' + parts[0] + '</strong> - ' + parts[1] + ' <small class="text-muted">(' + parts[2] + ')</small></span>');
        }

        const itensPreSelecionados = [
        @foreach (var item in (List<SelectListItem>)ViewBag.ItensSelecionados)
        {
            <text>{ id: '@item.Value', text: '@item.Text' },</text>
        }
        ];

        const $erpSelect = $('#erpSelect');

        $erpSelect.select2({
            placeholder: "Buscar Itens ERP...",
            ajax: {
                url: '/ItensERP/BuscarItensERP',
                dataType: 'json',
                delay: 250,
                data: function (params) {
                    return {
                        term: params.term,
                        tipo: $('#filtroTipo').val(),
                        status: $('#filtroStatus').val(),
                        tag: $('#filtroTag').val()
                    };
                },
                processResults: function (data) {
                    return { results: data };
                },
                cache: true
            },
            templateResult: formatItem,
            templateSelection: function (item) {
                if (!item.id) return item.text;
                return item.text.split('|')[0];
            },
            width: '100%',
            allowClear: true
        });

        itensPreSelecionados.forEach(i => {
            const option = new Option(i.text, i.id, true, true);
            $erpSelect.append(option).trigger('change');
        });

        $('#filtroTipo, #filtroStatus, #filtroTag').on('change input', function () {
            $erpSelect.select2('open');
        });

        $('#limparFiltros').on('click', function () {
            $('#filtroTipo, #filtroStatus, #filtroTag').val('');
            $erpSelect.select2('open');
        });

                const desenhosPreSelecionados = [
        @foreach (var item in (List<SelectListItem>)ViewBag.DesenhosSelecionados ?? new List<SelectListItem>())
        {
            <text>{ id: '@item.Value', text: '@item.Text' },</text>
        }
        ];

        const $desenhoSelect = $('#desenhoSelect');

        $desenhoSelect.select2({
            placeholder: "Buscar Desenhos...",
            ajax: {
                url: '/Desenhos/BuscarDesenhos',
                dataType: 'json',
                delay: 250,
                data: function (params) {
                    return {
                        term: params.term,
                        status: $('#filtroStatusDesenho').val(),
                        classificacao: $('#filtroClassificacaoDesenho').val(),
                        revisao: $('#filtroRevisaoDesenho').val()
                    };
                },
                processResults: function (data) {
                    return { results: data };
                },
                cache: true
            },
            templateResult: formatItem,
            templateSelection: function (item) {
                if (!item.id) return item.text;
                return item.text.split('|')[0];
            },
            width: '100%',
            allowClear: true,
            multiple: true
        });

        // Filtros disparam nova busca
        $('#filtroStatusDesenho, #filtroClassificacaoDesenho, #filtroRevisaoDesenho').on('change', function () {
            $desenhoSelect.select2('open');
        });

        // Adiciona os desenhos já vinculados
        desenhosPreSelecionados.forEach(i => {
            const option = new Option(i.text, i.id, true, true);
            $desenhoSelect.append(option).trigger('change');
        });


        if (desenhoPreSelecionado) {
            const option = new Option(desenhoTexto, desenhoPreSelecionado, true, true);
            $desenhoSelect.append(option).trigger('change');
        }
    </script>

    @await Html.PartialAsync("_ValidationScriptsPartial")
}