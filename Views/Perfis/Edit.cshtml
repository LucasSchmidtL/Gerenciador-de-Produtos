}

<h1 class="display-6 fw-bold text-primary mb-4">
    <i class="bi bi-pencil-square me-2"></i>@ViewData["Title"]
</h1>

<div class="card shadow-sm border-0">
    <div class="card-body p-4">
        <form asp-action="Edit">
