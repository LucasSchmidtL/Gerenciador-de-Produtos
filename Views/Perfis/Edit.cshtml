                <div class="col-md-6">
                    <label asp-for="Descricao" class="form-label">Descrição</label>
                    <input asp-for="Descricao" class="form-control" />
                    <span asp-validation-for="Descricao" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="TipoSecao" class="form-label">Tipo de Seção</label>
                    <input asp-for="TipoSecao" class="form-control" />
                    <span asp-validation-for="TipoSecao" class="text-danger"></span>
                </div>
            </div>

            <h5 class="fw-bold text-secondary mt-4 mb-3 border-bottom pb-2">
                <i class="bi bi-gear me-2"></i>Propriedades Técnicas
            </h5>

            <div class="row g-3">
                <div class="col-md-3">
                    <label asp-for="Peso" class="form-label"></label>
                    <input asp-for="Peso" class="form-control" />
                    <span asp-validation-for="Peso" class="text-danger"></span>
                </div>
                <div class="col-md-3">
                    <label asp-for="AreaBruta" class="form-label"></label>
                    <input asp-for="AreaBruta" class="form-control" />
                    <span asp-validation-for="AreaBruta" class="text-danger"></span>
                </div>
                <div class="col-md-3">
                    <label asp-for="AreaLiq" class="form-label"></label>
                    <input asp-for="AreaLiq" class="form-control" />
                    <span asp-validation-for="AreaLiq" class="text-danger"></span>
                </div>
                <div class="col-md-3">
                    <label asp-for="AreaEq" class="form-label"></label>
                    <input asp-for="AreaEq" class="form-control" />
                    <span asp-validation-for="AreaEq" class="text-danger"></span>
                </div>

                @* Propriedades X *@
                <div class="col-md-3"><label asp-for="Ix" class="form-label"></label><input asp-for="Ix" class="form-control" /></div>
                <div class="col-md-3"><label asp-for="Sxt" class="form-label"></label><input asp-for="Sxt" class="form-control" /></div>
                <div class="col-md-3"><label asp-for="Sxb" class="form-label"></label><input asp-for="Sxb" class="form-control" /></div>
                <div class="col-md-3"><label asp-for="Zx" class="form-label"></label><input asp-for="Zx" class="form-control" /></div>
                <div class="col-md-3"><label asp-for="Rx" class="form-label"></label><input asp-for="Rx" class="form-control" /></div>
                <div class="col-md-3"><label asp-for="yt" class="form-label"></label><input asp-for="yt" class="form-control" /></div>
                <div class="col-md-3"><label asp-for="yb" class="form-label"></label><input asp-for="yb" class="form-control" /></div>

                @* Propriedades Y *@
                <div class="col-md-3"><label asp-for="Ixy" class="form-label"></label><input asp-for="Ixy" class="form-control" /></div>
                <div class="col-md-3"><label asp-for="Iy" class="form-label"></label><input asp-for="Iy" class="form-control" /></div>
                <div class="col-md-3"><label asp-for="Syl" class="form-label"></label><input asp-for="Syl" class="form-control" /></div>
                <div class="col-md-3"><label asp-for="Syr" class="form-label"></label><input asp-for="Syr" class="form-control" /></div>
                <div class="col-md-3"><label asp-for="Zy" class="form-label"></label><input asp-for="Zy" class="form-control" /></div>
                <div class="col-md-3"><label asp-for="ry" class="form-label"></label><input asp-for="ry" class="form-control" /></div>

                @* Coordenadas *@
                <div class="col-md-3"><label asp-for="xl" class="form-label"></label><input asp-for="xl" class="form-control" /></div>
                <div class="col-md-3"><label asp-for="xr" class="form-label"></label><input asp-for="xr" class="form-control" /></div>
                <div class="col-md-3"><label asp-for="xo" class="form-label"></label><input asp-for="xo" class="form-control" /></div>
                <div class="col-md-3"><label asp-for="yo" class="form-label"></label><input asp-for="yo" class="form-control" /></div>

                @* Torção e Enrijecimento *@
