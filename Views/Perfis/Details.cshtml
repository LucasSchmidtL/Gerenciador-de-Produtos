@model Gerenciador_de_Produtos.Models.Perfil

@{
    ViewData["Title"] = "Detalhes do Perfil";
}

<h1 class="mb-4">@ViewData["Title"]</h1>

<div class="card shadow-sm">
    <div class="card-header bg-primary text-white py-2">
        <h5 class="mb-0">@Model.ERP - @Model.Descricao</h5>
    </div>
    <div class="card-body p-3">
        <div class="table-responsive">
            <table class="table table-sm table-hover">
                <thead>
                    <tr>
                        <th class="py-1">Propriedade</th>
                        <th class="py-1">Valor</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var prop in typeof(Gerenciador_de_Produtos.Models.Perfil).GetProperties())
                    {
                        <tr>
                            <td class="py-1 text-muted">@prop.Name</td>
                            <td class="py-1">@(prop.GetValue(Model) ?? "-")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer d-flex justify-content-end bg-light py-2">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-secondary me-2">Editar</a>
        <a asp-action="Index" class="btn btn-sm btn-outline-primary">Voltar</a>
    </div>
</div>
