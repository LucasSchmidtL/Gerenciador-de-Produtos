@model Gerenciador_de_Produtos.Controllers.ItemERPCreateEditViewModel

@{
    ViewData["Title"] = "Editar Item ERP";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

    <div class="row">
        <div class="col-md-6">
            <!-- Coluna esquerda: campos básicos -->
            <div class="form-group mb-3">
                <label asp-for="ERP" class="form-label">ERP</label>
                <input asp-for="ERP" class="form-control" />
                <span asp-validation-for="ERP" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="TipoItem" class="form-label">Tipo de Item</label>
                <input asp-for="TipoItem" class="form-control" />
                <span asp-validation-for="TipoItem" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="ItemERPIdOriginal" class="form-label">ID Original</label>
                <input asp-for="ItemERPIdOriginal" class="form-control" />
                <span asp-validation-for="ItemERPIdOriginal" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Descricao" class="form-label">Descrição</label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Revisao" class="form-label">Revisão</label>
                <input asp-for="Revisao" class="form-control" />
                <span asp-validation-for="Revisao" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="DataCriacao" class="form-label">Data de Criação</label>
                <input asp-for="DataCriacao" type="date" class="form-control" />
                <span asp-validation-for="DataCriacao" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <!-- Coluna direita: restantes e multiselect -->
            <div class="form-group mb-3">
                <label asp-for="AreaSuperficial" class="form-label">Área Superficial</label>
                <input asp-for="AreaSuperficial" class="form-control" />
                <span asp-validation-for="AreaSuperficial" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="PesoLiquidoMetro" class="form-label">Peso Líquido/M</label>
                <input asp-for="PesoLiquidoMetro" class="form-control" />
                <span asp-validation-for="PesoLiquidoMetro" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="PesoBrutoMetro" class="form-label">Peso Bruto/M</label>
                <input asp-for="PesoBrutoMetro" class="form-control" />
                <span asp-validation-for="PesoBrutoMetro" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="PerimetroSolda" class="form-label">Perímetro Solda</label>
                <input asp-for="PerimetroSolda" class="form-control" />
                <span asp-validation-for="PerimetroSolda" class="text-danger"></span>
            </div>

            <!-- Multiselect abaixo -->
            <div class="form-group mb-3">
                <label asp-for="SelectedTagIds" class="form-label">Tags</label>
                <select asp-for="SelectedTagIds" asp-items="Model.AllTags" multiple class="form-select"></select>
                <span asp-validation-for="SelectedTagIds" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="SelectedAgrupadorIds" class="form-label">Agrupadores</label>
                <select asp-for="SelectedAgrupadorIds" asp-items="Model.AllAgrupadores" multiple class="form-select"></select>
                <span asp-validation-for="SelectedAgrupadorIds" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="SelectedDesenhoIds" class="form-label">Desenhos</label>
                <select asp-for="SelectedDesenhoIds" asp-items="Model.AllDesenhos" multiple class="form-select"></select>
                <span asp-validation-for="SelectedDesenhoIds" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="SelectedPerfilIds" class="form-label">Perfis</label>
                <select asp-for="SelectedPerfilIds" asp-items="Model.AllPerfis" multiple class="form-select"></select>
                <span asp-validation-for="SelectedPerfilIds" class="text-danger"></span>
            </div>
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Salvar</button>
    <a asp-action="Index" class="btn btn-link">Voltar</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
