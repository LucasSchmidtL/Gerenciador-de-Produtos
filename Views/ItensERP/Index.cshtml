@model IEnumerable<Gerenciador_de_Produtos.Models.ItemERP>

@{
    ViewData["Title"] = "Itens ERP";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Novo ItemERP</a>
</p>

@foreach (var item in Model)
{
    <div class="card mb-4">
        <div class="card-header">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <strong>ERP:</strong> @item.ERP (@item.Id)
                    @if (!string.IsNullOrWhiteSpace(item.Descricao))
                    {
                        <br />

                        <small class="text-muted">@item.Descricao</small>
                    }
                </div>
                <div>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                </div>
            </div>
        </div>

        <div class="card-body">
            <div class="row mb-2">
                <div class="col-sm-4"><strong>Tipo:</strong> @item.TipoItem</div>
                <div class="col-sm-4"><strong>Original:</strong> @item.ItemERPIdOriginal</div>
                <div class="col-sm-4"><strong>Revisão:</strong> @item.Revisao</div>
            </div>
            <div class="row mb-2">
                <div class="col-sm-4"><strong>Data Criação:</strong> @(item.DataCriacao?.ToString("dd/MM/yyyy"))</div>
                <div class="col-sm-4"><strong>Status:</strong> @item.Status</div>
                <div class="col-sm-4"><strong>Acabamento:</strong> @item.Acabamento</div>
            </div>
        </div>

        <div class="card-footer p-0">
            <h5 class="m-3">Tags Vinculadas</h5>
            @if (item.Tags != null && item.Tags.Any())
            {
                <table class="table table-sm table-bordered mb-4">
                    <thead class="table-light">
                        <tr>
                            <th>Tag</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var tag in item.Tags)
                        {
                            <tr>
                                <td>@tag.Nome</td>
                                <td>
                                    <a asp-controller="Tags" asp-action="Edit" asp-route-id="@tag.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                                    <a asp-controller="Tags" asp-action="Details" asp-route-id="@tag.Id" class="btn btn-sm btn-outline-info">Details</a>
                                    <a asp-controller="Tags" asp-action="Delete" asp-route-id="@tag.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="p-3 text-muted">Nenhuma tag vinculada</div>
            }

            <h5 class="m-3">Agrupadores Vinculados</h5>
            @if (item.AgrupadorItensERP.Any())
            {
                <table class="table table-sm table-bordered mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Agrupador</th>
                            <th>Comprimento</th>
                            <th>Altura</th>
                            <th>Profundidade</th>
                            <th>Quantidade</th>
                            <th>Status</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var vinculo in item.AgrupadorItensERP)
                        {
                            <tr>
                                <td>@vinculo.Agrupador.Nome (@vinculo.Agrupador.Id)</td>
                                <td>@vinculo.Comprimento</td>
                                <td>@vinculo.Altura</td>
                                <td>@vinculo.Profundidade</td>
                                <td>@vinculo.Quantidade</td>
                                <td>
                                    @if (vinculo.Status)
                                    {
                                        <span class="badge bg-success">Ativo</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Inativo</span>
                                    }
                                </td>
                                <td>
                                    <a asp-controller="AgrupadoresItensERP" asp-action="Edit" asp-route-id="@vinculo.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                                    <a asp-controller="AgrupadoresItensERP" asp-action="Details" asp-route-id="@vinculo.Id" class="btn btn-sm btn-outline-info">Details</a>
                                    <a asp-controller="AgrupadoresItensERP" asp-action="Delete" asp-route-id="@vinculo.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="p-3 text-muted">Sem agrupadores vinculados</div>
            }
        </div>
    </div>
}