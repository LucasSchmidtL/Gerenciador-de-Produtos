@model IEnumerable<Gerenciador_de_Produtos.Models.ItemERP>

@{
    ViewData["Title"] = "Itens ERP";
}

<!-- Estilos de rotação do ícone (pode mover para site.css) -->
<style>
    .toggle-icon {
        transition: transform 0.3s ease;
    }

    .toggle-collapsed .toggle-icon {
        transform: rotate(-90deg);
    }
</style>

<div class="mb-4">
    <h3 class="fw-bold mb-3">@ViewData["Title"]</h3>
    <div class="row g-2">
        <div class="col-auto">
            <a asp-action="Create" class="btn btn-primary rounded-pill py-0 px-3">
                <i class="bi bi-plus-lg me-1"></i>Novo ItemERP
            </a>
        </div>
        <div class="col">
            <input id="searchInput"
                   class="form-control"
                   placeholder="Buscar ERP, descrição ou tipo..." />
        </div>
    </div>
</div>

@foreach (var item in Model)
{
    <div class="card mb-4" data-search="@item.ERP @item.Descricao @item.TipoItem">
        <div class="card-header">
            <div class="d-flex justify-content-between align-items-center">
                <!-- Toggle estilo “pill” -->
                <button class="btn btn-sm btn-outline-secondary rounded-pill py-0 px-2 me-2 toggle-btn"
                        data-bs-toggle="collapse"
                        data-bs-target="#details_@item.Id"
                        aria-expanded="false"
                        aria-controls="details_@item.Id">
                    <i class="fas fa-chevron-down toggle-icon"></i>
                </button>

                <div class="flex-grow-1">
                    <strong>ERP:</strong> @item.ERP (@item.Id)
                    @if (!string.IsNullOrWhiteSpace(item.Descricao))
                    {
                        <br />
                        <small class="text-muted">@item.Descricao</small>
                    }
                </div>

                <div>
                    <a asp-action="Details" asp-route-id="@item.Id"
                       class="btn btn-sm btn-outline-info rounded-pill py-0 px-2 me-1">
                        <i class="bi bi-eye me-1"></i>Details
                    </a>
                    <a asp-action="Edit" asp-route-id="@item.Id"
                       class="btn btn-sm btn-outline-secondary rounded-pill py-0 px-2 me-1">
                        <i class="bi bi-pencil me-1"></i>Edit
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.Id"
                       class="btn btn-sm btn-outline-danger rounded-pill py-0 px-2">
                        <i class="bi bi-trash me-1"></i>Delete
                    </a>
                </div>
            </div>
        </div>

        <div class="collapse" id="details_@item.Id">
            <div class="card-body">
                <div class="row mb-2">
                    <div class="col-sm-4"><strong>Tipo:</strong> @item.TipoItem</div>
                    <div class="col-sm-4"><strong>Original:</strong> @item.ItemERPIdOriginal</div>
                    <div class="col-sm-4"><strong>Revisão:</strong> @item.Revisao</div>
                </div>
                <div class="row mb-2">
                    <div class="col-sm-4"><strong>Data Criação:</strong> @(item.DataCriacao?.ToString("dd/MM/yyyy"))</div>
                    <div class="col-sm-4"><strong>Status:</strong> @item.Status</div>
                    <div class="col-sm-4"><strong>Acabamento:</strong> @item.Acabamento</div>
                </div>
            </div>

            <div class="card-footer p-0">
                <h5 class="m-3">Tags Vinculadas</h5>
                @if (item.Tags != null && item.Tags.Any())
                {
                    <table class="table table-sm table-bordered mb-4">
                        <thead class="table-light">
                            <tr>
                                <th>Tag</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var tag in item.Tags)
                            {
                                <tr>
                                    <td>@tag.Nome</td>
                                    <td>
                                        <a asp-controller="Tags" asp-action="Edit" asp-route-id="@tag.Id"
                                           class="btn btn-sm btn-outline-secondary rounded-pill py-0 px-2 me-1">
                                            <i class="bi bi-pencil me-1"></i>Edit
                                        </a>
                                        <a asp-controller="Tags" asp-action="Details" asp-route-id="@tag.Id"
                                           class="btn btn-sm btn-outline-info rounded-pill py-0 px-2 me-1">
                                            <i class="bi bi-eye me-1"></i>Details
                                        </a>
                                        <a asp-controller="Tags" asp-action="Delete" asp-route-id="@tag.Id"
                                           class="btn btn-sm btn-outline-danger rounded-pill py-0 px-2">
                                            <i class="bi bi-trash me-1"></i>Delete
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="p-3 text-muted">Nenhuma tag vinculada</div>
                }

                <h5 class="m-3">Agrupadores Vinculados</h5>
                @if (item.AgrupadorItensERP.Any())
                {
                    <table class="table table-sm table-bordered mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Agrupador</th>
                                <th>Comprimento</th>
                                <th>Altura</th>
                                <th>Profundidade</th>
                                <th>Quantidade</th>
                                <th>Status</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var vinculo in item.AgrupadorItensERP)
                            {
                                <tr>
                                    <td>@vinculo.Agrupador.Nome (@vinculo.Agrupador.Id)</td>
                                    <td>@vinculo.Comprimento</td>
                                    <td>@vinculo.Altura</td>
                                    <td>@vinculo.Profundidade</td>
                                    <td>@vinculo.Quantidade</td>
                                    <td>
                                        @if (vinculo.Status)
                                        {
                                            <span class="badge bg-success">Ativo</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Inativo</span>
                                        }
                                    </td>
                                    <td>
                                        <a asp-controller="AgrupadoresItensERP" asp-action="Edit" asp-route-id="@vinculo.Id"
                                           class="btn btn-sm btn-outline-secondary rounded-pill py-0 px-2 me-1">
                                            <i class="bi bi-pencil me-1"></i>Edit
                                        </a>
                                        <a asp-controller="AgrupadoresItensERP" asp-action="Details" asp-route-id="@vinculo.Id"
                                           class="btn btn-sm btn-outline-info rounded-pill py-0 px-2 me-1">
                                            <i class="bi bi-eye me-1"></i>Details
                                        </a>
                                        <a asp-controller="AgrupadoresItensERP" asp-action="Delete" asp-route-id="@vinculo.Id"
                                           class="btn btn-sm btn-outline-danger rounded-pill py-0 px-2">
                                            <i class="bi bi-trash me-1"></i>Delete
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="p-3 text-muted">Sem agrupadores vinculados</div>
                }
            </div>
        </div>
    </div>
}

@section Scripts {
    <script>
        // filtro em tempo real
        document.getElementById('searchInput').addEventListener('input', function() {
            var filtro = this.value.toLowerCase();
            document.querySelectorAll('[data-search]').forEach(function(card) {
                var texto = card.getAttribute('data-search').toLowerCase();
                card.style.display = texto.includes(filtro) ? '' : 'none';
            });
        });

        // initialize all toggles as collapsed
        document.querySelectorAll('.toggle-btn').forEach(function(btn) {
            btn.classList.add('toggle-collapsed');
            btn.addEventListener('click', function() {
                btn.classList.toggle('toggle-collapsed');
            });
        });
    </script>
}
