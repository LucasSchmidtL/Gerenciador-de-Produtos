@model Gerenciador_de_Produtos.Models.VariavelComponente

@{
    ViewData["Title"] = "Nova Variável de Componente";
}

<h1 class="display-4 text-center mb-5 text-primary">
    <i class="bi bi-sliders me-2"></i>@ViewData["Title"]
</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Create">
            @Html.AntiForgeryToken()

            <!-- Mostra todos os erros de ModelState -->
            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="Nome" class="form-label">Nome</label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Descricao" class="form-label">Descrição</label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Tipo" class="form-label">Tipo</label>
                <input asp-for="Tipo" class="form-control" />
                <span asp-validation-for="Tipo" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ComponenteId" class="form-label">Componente</label>
                <select asp-for="ComponenteId"
                        class="form-select"
                        asp-items="ViewBag.ComponenteId">
                    <option value="">-- selecione o componente --</option>
                </select>
                <span asp-validation-for="ComponenteId" class="text-danger"></span>
            </div>

            <div class="form-check mb-3">
                <input asp-for="Status" class="form-check-input" />
                <label asp-for="Status" class="form-check-label">Ativo?</label>
            </div>

            <div class="mb-3">
                <label asp-for="Valor" class="form-label">Valor</label>
                <input asp-for="Valor" class="form-control" />
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>

            <div class="d-flex">
                <button type="submit" class="btn btn-primary me-2">Salvar</button>
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
