@model Gerenciador_de_Produtos.Models.Agrupador

@{
    ViewData["Title"] = "Editar Agrupador";
}

<h1>Editar Agrupador</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Grupo" class="control-label"></label>
                <input asp-for="Grupo" class="form-control" />
                <span asp-validation-for="Grupo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DesenvolvimentoId" class="control-label"></label>
                <input asp-for="DesenvolvimentoId" class="form-control" />
                <span asp-validation-for="DesenvolvimentoId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Itens ERP</label>
                <select asp-for="ItemErpIds" class="form-control" multiple="multiple"
                        asp-items="@(ViewData["ItemERPs"] as MultiSelectList)">
                </select>
                <span asp-validation-for="ItemErpIds" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="AgrupadorPaiId" class="control-label"></label>
                <input asp-for="AgrupadorPaiId" class="form-control" />
                <span asp-validation-for="AgrupadorPaiId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Nivel" class="control-label"></label>
                <input asp-for="Nivel" class="form-control" />
                <span asp-validation-for="Nivel" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Salvar</button>
                <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}