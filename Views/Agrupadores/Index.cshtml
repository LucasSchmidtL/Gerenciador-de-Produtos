@model IEnumerable<Gerenciador_de_Produtos.Models.Agrupador>

@{
    ViewData["Title"] = "Agrupadores";
}

<!-- Estilos de rotação do ícone (mova para site.css se preferir) -->
<style>
    .toggle-icon {
        transition: transform 0.3s ease;
    }

    .toggle-collapsed .toggle-icon {
        transform: rotate(-90deg);
    }
</style>

<div class="mb-4">
    <h3 class="fw-bold mb-3">@ViewData["Title"]</h3>
    <div class="row g-2">
        <div class="col-auto">
            <a asp-action="Create" class="btn btn-primary rounded-pill py-0 px-3">
                <i class="bi bi-plus-lg me-1"></i>Criar Novo
            </a>
        </div>
        <div class="col">
            <input id="searchInput"
                   class="form-control"
                   placeholder="Buscar nome ou grupo..." />
        </div>
    </div>
</div>

@foreach (var agr in Model)
{
    <div class="card mb-4" data-search="@agr.Nome @agr.Grupo">
        <div class="card-header">
            <div class="d-flex justify-content-between align-items-center">
                <!-- toggle à esquerda -->
                <button class="btn btn-sm btn-outline-secondary rounded-pill py-0 px-2 me-2 toggle-btn"
                        data-bs-toggle="collapse"
                        data-bs-target="#details_@agr.Id"
                        aria-expanded="false"
                        aria-controls="details_@agr.Id">
                    <i class="fas fa-chevron-down toggle-icon"></i>
                </button>

                <div class="flex-grow-1">
                    <strong>@agr.Nome</strong>
                    <small class="text-muted ms-2">(@(agr.Grupo ?? "—"))</small>
                </div>

                <div>
                    <span class="badge bg-secondary me-3">Nível @agr.Nivel</span>
                    <a asp-action="Details" asp-route-id="@agr.Id"
                       class="btn btn-sm btn-outline-info rounded-pill py-0 px-2 me-1">
                        <i class="bi bi-eye me-1"></i>Detalhes
                    </a>
                    <a asp-action="Edit" asp-route-id="@agr.Id"
                       class="btn btn-sm btn-outline-secondary rounded-pill py-0 px-2 me-1">
                        <i class="bi bi-pencil me-1"></i>Editar
                    </a>
                    <a asp-action="Delete" asp-route-id="@agr.Id"
                       class="btn btn-sm btn-outline-danger rounded-pill py-0 px-2">
                        <i class="bi bi-trash me-1"></i>Excluir
                    </a>
                </div>
            </div>
        </div>

        <div class="collapse" id="details_@agr.Id">
            <div class="card-body">
                <div class="row mb-2">
                    <div class="col-sm-6"><strong>Desenvolvimento:</strong> @(agr.DesenvolvimentoId?.ToString() ?? "—")</div>
                    <div class="col-sm-6"><strong>Agrupador Pai:</strong> @(agr.AgrupadorPaiId?.ToString() ?? "—")</div>
                </div>
                <hr />
                <div class="bg-light p-3 rounded mb-3">
                    <h6 class="mb-2">Itens ERP</h6>
                    @if (agr.AgrupadorItensERP?.Any() == true)
                    {
                        <ul class="list-group">
                            @foreach (var ai in agr.AgrupadorItensERP)
                            {
                                <li class="list-group-item">
                                    <i class="bi bi-box me-1"></i>@ai.ItemERP.ERP
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p class="text-muted mb-0">Nenhum Item ERP vinculado.</p>
                    }
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script>
        // filtro em tempo real
        document
          .getElementById('searchInput')
          .addEventListener('input', function() {
            var filtro = this.value.toLowerCase();
            document
              .querySelectorAll('[data-search]')
              .forEach(function(card) {
                var texto = card.getAttribute('data-search').toLowerCase();
                card.style.display = texto.includes(filtro) ? '' : 'none';
              });
          });

        // inicializa toggles como fechados e anima ícones
        document.querySelectorAll('.toggle-btn').forEach(function(btn) {
          btn.classList.add('toggle-collapsed');
          btn.addEventListener('click', function() {
            btn.classList.toggle('toggle-collapsed');
          });
        });
    </script>
}
