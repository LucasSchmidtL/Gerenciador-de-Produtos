@model Gerenciador_de_Produtos.Controllers.AgrupadorProdutoViewModel

@{
    ViewData["Title"] = "Delete Vínculo Produto ↔ Agrupador";
}

<h1>Excluir Vínculo</h1>

<h4>Tem certeza que deseja excluir este vínculo?</h4>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">Produto</dt>
        <dd class="col-sm-10">
            @Model.NomeComercial
        </dd>

        <dt class="col-sm-2">Agrupador</dt>
        <dd class="col-sm-10">
            @Model.AgrupadorNome
        </dd>

        <dt class="col-sm-2">Variável</dt>
        <dd class="col-sm-10">
            @Model.Variavel
        </dd>

        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">
            @if (Model.Status)
            {
                <span class="badge bg-success">Ativo</span>
            }
            else
            {
                <span class="badge bg-secondary">Inativo</span>
            }
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="VinculoId" />
        <button type="submit" class="btn btn-danger">Excluir</button>
        <a asp-action="Index" class="btn btn-link">Cancelar</a>
    </form>
</div>
